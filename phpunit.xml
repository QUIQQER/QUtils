<phpunit bootstrap="phpunit/bootstrap.php">
    <testsuites>
        <testsuite name="qutils test suit">
            <directory>phpunit/lib</directory>
        </testsuite>
    </testsuites>

    <logging>
      <log type="coverage-html" target="phpunit/report" charset="UTF-8"
           highlight="false" lowUpperBound="35" highLowerBound="70"/>
    </logging>

    <php>
        <var name="DB_DRIVER" value="mysql" />
        <var name="DB_HOST" value="localhost" />
        <var name="DB_USER" value="phpunit" />
        <var name="DB_PASSWD" value="phpunit" />
        <var name="DB_DBNAME" value="phpunit" />
    </php>

</phpunit>